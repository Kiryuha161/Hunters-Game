@using Hunters_Game.Models.Characters

@model List<Hunter>

<form asp-asp-controller="Hunter" asp-action="AddHunters">
    <input type="submit" value="Добавить охотников" />
</form>

<table class="table table-bordered table-responsive table-striped">
    <thead>
        <tr>
            <th hidden>Id</th>
            <th>Имя</th>
            <th>Пол</th>
            <th>Возраст</th>
            <th>Дата рождения</th>
            <th>Характеристики</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hunter in Model)
        {
            <tr>
                <td hidden>@hunter.CharacterId</td>
                <td>@hunter.SecondName @hunter.FirstName</td>
                
                @if (hunter.Gender)
                {
                    <td>Мужской</td>
                }
                else
                {
                    <td>Женский</td>
                }

                <td>@hunter.Age</td>
                <td>@hunter.Birthday.ToString().Replace("0:00:00", "")</td>
                <td><a class="btn btn-primary" asp-controller="Hunter" asp-action="GetHunterStats" asp-route-id="@hunter.CharacterId">Посмотреть характеристики</a></td>
            </tr>
        }
    </tbody>
</table>


